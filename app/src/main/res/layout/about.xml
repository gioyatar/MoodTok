<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Title -->
    <TextView
        android:id="@+id/topTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="About"
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:background="#3B2D2F"
        android:padding="16dp" />

    <!-- About Us Title -->
    <TextView
        android:id="@+id/aboutUsTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="About Us"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#3B2D2F"
        android:layout_marginTop="32dp"
        android:layout_gravity="center" />

    <!-- Content Box -->
    <LinearLayout
        android:id="@+id/contentBox"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_margin="24dp"
        android:background="#FFF9EF"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFF9EF"
        android:clipToOutline="true">

        <TextView
            android:id="@+id/greetingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:text="Moodtok is your personal companion app that helps you stay in tune with your emotions and daily life. It tracks your mood based on how your day goes, giving you insights into your emotional patterns over time. Beyond mood tracking, Moodtok also doubles as a handy to-do list manager and a private digital diary â€” all in one place. Whether you're organizing tasks or reflecting on your day, Moodtok keeps you grounded and focused."
            android:textAlignment="center"
            android:textColor="#6F4F4F"
            android:textSize="16sp"
            android:lineSpacingExtra="6dp" />
    </LinearLayout>

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavBar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#1A1A1A"
        android:padding="8dp">

        <!-- Nav Item Template -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/dashboard_logo" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Home"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/diary"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/diary_logo" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Diary"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/todo"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/assignment_logo" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="To-Do"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/about"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:src="@drawable/account_logo" />

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="About"
                android:textSize="12sp"
                android:textColor="#FFFFFF"
                android:layout_marginTop="4dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
