<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:orientation="vertical">

        <!-- Mood Icon and Date Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start">

            <!-- Mood Icon -->
            <ImageView
                android:id="@+id/diary_mood_img"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/mood1"
                android:contentDescription="Mood Icon"
                android:layout_marginEnd="8dp"
                android:layout_gravity="start"/>

            <!-- Date, Mood, and Time Info -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/diary_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TODAY, MARCH 27"
                    android:textSize="12sp"
                    android:textColor="@color/black"/>

                <!-- Mood and Time in Horizontal Layout -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mood_display"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="good"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/diary_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="08:45 AM"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Activities and Conditions -->
        <TextView
            android:id="@+id/listed_activities"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Good Sleep • Reading • Sport • Eat Healthy • Sunny"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>

        <!-- Diary Entry -->
        <TextView
            android:id="@+id/diary_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Morning run 🏃. Feeling good and full of energy! 😎🎉"
            android:textSize="14sp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
